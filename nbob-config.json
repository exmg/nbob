{
	"nbob": {
		"multiCore": true
	},
	"project": {
		"name": null,
		"version": null,
		"files": [
			"**/*",
			"{{make:js:hint.rcFile}}",
			"{{make:js:hint.ignoreFile}}",
			"{{make:js:style.rcFile}}",
			"{{make:js:esnext.rcFile}}",
			"!build/**/*",
			"!dist/**/*",
			"!nbob-config.json",
			"!*.sublime-*",
			"!node_modules/**/*",
			"!bower.json",
			"!bower_components/**/*"
		],
		"buildDir": "build",
		"distDir": "dist"
	},
	"init:nbob": {
		"description": "Create nbob-config.json",
		"processor": "init-nbob"
	},
	"init:skeleton": {
		"description": "Copy skeleton files",
		"processor": "init-skeleton"
	},
	"init:browsers": {
		"description": "Create browserslist file",
		"processor": "init-browsers",
		"file": "browserslist",
		"files": [ "{{init:browsers.file}}" ]
	},
	"init:aws": {
		"description": "Create ~/.aws/credentials",
		"processor": "init-aws"
	},
	"update:api": {
		"description": "Update EM api directory",
		"processor": "em-api",
		"template": "playtotv-define",
		"host": null,
		"resources": []
	},
	"update:l10n": {
		"description": "Update l10n directory",
		"processor": "l10n-update",
		"locales": "l10n/*.json",
		"files": [ "{{update:l10n.locales}}", "**/*-l10n{,-*}.{html,hbs}", "**/*-l10n/**/*.{html,hbs}" ]
	},
	"update:endings": {
		"description": "Convert text file line endings",
		"processor": "endings",
		"files": [ "**/*.{html,hbs,css,js,json,less,scss}" ]
	},
	"clean": {
		"description": "Remove build and dist directories",
		"processor": "clean"
	},
	"make:images:png": {
		"description": "Compress PNG images",
		"processor": "pngquant",
		"files": [ "**/*.png" ],
		"options": {}
	},
	"make:html:l10n": {
		"description": "Localize texts",
		"processor": "l10n-make",
		"locales": "{{update:l10n.locales}}",
		"files": "{{> update:l10n.files}}",
		"default": null
	},
	"make:html:hbs": {
		"description": "Render Handlebars to HTML",
		"processor": "hbs-html",
		"files": [ "**/*.hbs", "!templates/**/*" ],
		"partialFiles": [ "**/_*" ],
		"nameRegex": "^(.+)\\.hbs$",
		"options": {},
		"helpers": null
	},
	"make:html:minify": {
		"description": "Minify HTML",
		"processor": "html-minify",
		"files": [ "**/*.html" ]
	},
	"make:html:templates": {
		"description": "Concatenate templates",
		"processor": "directory",
		"files": [ "{,__BUILD__/}templates/*/*.html" ],
		"ext": ".html"
	},
	"make:css:less": {
		"description": "Compile LESS to CSS",
		"processor": "less",
		"files": [ "**/*.less" ]
	},
	"make:css:sass": {
		"description": "Compile Sass to CSS",
		"processor": "sass",
		"files": [ "**/*.scss" ]
	},
	"make:css:post": {
		"description": "Post process CSS",
		"processor": "postcss",
		"files": [ "{{init:browsers.file}}", "**/*.css{,.map}" ],
		"ignoreWarnings": false,
		"plugins": {
			"autoprefixer": {
				"remove": false
			},
			"csswring": {
				"preserveHacks": true
			}
		}
	},
	"make:js:style": {
		"description": "Analyze and Fix JS with JSCS",
		"processor": "jscs",
		"rcFile": ".jscsrc",
		"files": [ "{{make:js:style.rcFile}}", "**/*.js" ],
		"fix": true
	},
	"make:js:hint": {
		"description": "Analyze JS with JSHint",
		"processor": "jshint",
		"rcFile": ".jshintrc",
		"ignoreFile": ".jshintignore",
		"files": [ "{{make:js:hint.rcFile}}", "{{make:js:hint.ignoreFile}}", "**/*.js" ]
	},
	"make:js:esnext": {
		"description": "Transpile ES6+ to ES5 with Babel",
		"processor": "babel",
		"rcFile": ".babelrc",
		"files": [ "{{make:js:esnext.rcFile}}", "**/*.js{,.map}" ]
	},
	"make:js:hbs": {
		"description": "Compile Handlebars templates",
		"processor": "hbs-js",
		"files": [ "templates/**/*.hbs" ],
		"partialFiles": [ "**/_*", "!**/__*" ],
		"nameRegex": "^templates/(.+)\\.hbs$",
		"runtime": "lib/handlebars.js",
		"options": {
			"knownHelpers": [ "if", "unless", "each", "with", "lookup", "log" ],
			"knownHelpersOnly": false,
			"data": true
		}
	},
	"make:js:minify": {
		"description": "Minify JS",
		"processor": "uglify",
		"files": [ "**/*.js{,.map}", "!**/*.min.js" ],
		"ignoreFiles": [
			"templates/**/*",
			"bower_components/**/*"
		],
		"mangle": true,
		"compressor": {},
		"printer": {}
	},
	"make:js:concat": {
		"description": "Concatenate JS files",
		"processor": "concat",
		"files": [ "{lib,templates,src}/**/*.js{,.map}" ],
		"output": "{{project.name}}-{{project.version}}.min.js"
	},
	"make:js:amd": {
		"description": "Optimize EM AMD modules",
		"processor": "em-amd",
		"files": [ "{{make:js:concat.output}}{,.map}" ],
		"exports": [],
		"ignoreUndefDeps": false
	},
	"make:components": {
		"description": "Vulcanize Web Components",
		"processor": "components",
		"files": [ "components.html" ],
		"minimize": true,
		"vulcanize": {
			"inlineScripts": true,
			"inlineCss": true,
			"stripComments": true
		},
		"uglify": {}
	},
	"make:include": {
		"description": "Include files",
		"processor": "include",
		"partials": "inc/**/*",
		"files": [ "**/*-inc{,-*}.html", "{{make:include.partials}}" ],
		"regex": "(?:\\<!--|/\\*) \\{\\{\\> (.*?)}} (?:--\\>|\\*/)"
	},
	"make:substitute": {
		"description": "Substitute in file paths and text",
		"processor": "substitute",
		"files": [ "**/*" ],
		"textFiles": [ "**/*.{html,hbs,css,js,json}" ],
		"substitutes": {
			"ENV": "__ENV__",
			"BUILD": "__BUILD__",
			"PROJECT": "{{project.name}}",
			"VERSION": "{{project.version}}",
			"MIN_JS": "{{make:js:concat.output}}"
		}
	},
	"make:dist": {
		"description": "Write files to dist directory",
		"processor": "dist",
		"files": [ "**/*" ]
	},
	"server": {
		"description": "Make and host files using BrowserSync",
		"processor": "server",
		"options": {
			"logLevel": "silent",
			"server": {
				"baseDir": "{{project.distDir}}",
				"directory": false
			},
			"files": [
				"{{project.distDir}}/**/*",
				"!**/*.map"
			],
			"minify": false,
			"reloadOnRestart": true
		}
	},
	"deploy": {
		"description": "Make and copy to S3",
		"processor": "deploy-s3",
		"dependencies": [ "make" ],
		"files": [ "**/*", "!**/*.{gv,map}" ],
		"keep": [],
		"region": "eu-west-1",
		"bucketName": null,
		"force": false,
		"cacheControl": "max-age=3600",
		"cacheControlRules": [ {
			"files": [ "build-*/**/*" ],
			"control": "max-age=31536000"
		} ],
		"gzipThreshold": 1000
	},
	"envConfigMap": {
		"debug": {
			"make:html:minify": {
				"files": [ "!!" ]
			},
			"make:js:minify": {
				"mangle": false,
				"compressor": {
					"drop_debugger": false
				}
			},
			"make:components": {
				"uglify": {
					"mangle": false
				}
			}
		}
	}
}
